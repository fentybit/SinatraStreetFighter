<h1><%= @character.name %></h1>

<br>
<h3>Fighting moves</h3>
<br>

<% if @character.moves.empty? %>
    There are no fighting moves. Would you like to add/edit fighting moves?<br>
    <a href="/<%= @character.slug %>/moves/new"><input type="submit" class="btn btn-outline-warning" value="Add Fighting Moves"></a>
<% else %>
    <% @character.moves.each do |move| %>
        <%= move.name %><br>
    <% end %>
    <a href="/<%= @character.slug %>/moves/edit"><input type="submit" class="btn btn-outline-warning" value="Add/Edit Fighting Moves"></a>
<% end %>

<br><br>

<h3>Stage</h3>
<br>

<% if @character.stages.empty? %>
    Select a Stage to play.<br>
    <a href="/<%= @character.slug %>/stages/new"><input type="submit" class="btn btn-outline-warning" value="Add Stage Battle"></a>
<% else %>
    <%= @character.stages.last %>
    <a href="/<%= @character.slug %>/stages/edit"><input type="submit" class="btn btn-outline-warning" value="Add/Edit Stage Battle"></a>
<% end %>


<br><br><br><br>

<a href="/characters"><input type="submit" class="btn btn-outline-warning" value="Back to Characters List"></a>

<br><br>

<a href="/<%= @character.slug %>/stages"><input type="submit" class="btn btn-outline-danger" value="Are you ready for your battle?"></a>