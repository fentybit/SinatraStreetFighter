<% if flash.has?(:message) %>
  <%= flash[:message] %><br><br>
<% end %>

<form method="POST" action="/login">
    <div class="form-group">
     <label for="username">Username</label>
      <input type="text" name="username" class="form-control" id="exampleInputPassword1" placeholder="Username"; background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;>
    </div>

    <div class="form-group">
      <label for="password">Password</label>
      <input type="text" name="password" class="form-control" id="exampleInputPassword1" placeholder="Password"; background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;>
    </div>
      
    <br><br>
    <button type="submit" class="btn btn-outline-warning">Log In</button>
    <button type="button" class="btn btn-outline-warning"><a href="/">Back to Welcome Page</a></button>
</form>