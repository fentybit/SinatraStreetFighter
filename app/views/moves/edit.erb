<form method="POST" action="/<%= @character.slug %>/moves/edit">
    <input type="hidden" name="_method" value="PATCH">

    <% Move.all.each do |move| %>
        <input type="checkbox" name="character[move_ids][]" value="<%= move.id %>" <%='checked' if @character.moves.include?(move) %>> <%= move.name %><br>
    <% end %>

    <br>
    
    New fighting move
    <input type="text" class="form-control" placeholder="New fighting move" name="move[name]">
    
    <br>

    <input type="submit" class="btn btn-outline-success" value="Update Fighting Moves">
</form>

<br><br>

<a href="/characters/<%= @character.slug %>"><input type="submit" class="btn btn-outline-warning" value="Back to Character"></a>